{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noUnusedParameters": false,
        "outDir": "./built",
        "lib": [
            "es2015"
        ],
        "target": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "none",
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*",
        "./test/**/*",
        "./types/**/*"
    ]
}
